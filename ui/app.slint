import { Column } from "./component/column.slint";
import { ScrollView } from "std-widgets.slint";


export component ColumnView inherits Window {
    title: "Column View";
    min-width: 200px;
    min-height: 100px;

    in property <[[string]]> columns: [[]];

    HorizontalLayout {
        ScrollView {
            HorizontalLayout {
                spacing: 0px;

                for col[col-idx] in columns: Column {
                    items: col;
                    selected-index: -1;
                }
            }
        }
    }
}
