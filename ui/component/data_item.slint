export component DataItem inherits Rectangle {
    in property <string> item-name;
    in property <bool> is-folder;
    in property <bool> is-selected;

    height: 32px;
    background: is-selected ? #404040 : transparent;

    HorizontalLayout {
        padding-left: 12px;
        padding-right: 12px;
        spacing: 8px;

        Text {
            text: is-folder ? "📁" : "📄";
            color: #ffffff;
            vertical-alignment: center;
        }

        Text {
            text: item-name;
            color: #e0e0e0;
            vertical-alignment: center;
            overflow: elide;
            horizontal-stretch: 1;
        }
    }
}
